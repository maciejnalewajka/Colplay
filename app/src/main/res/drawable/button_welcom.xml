<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <layer-list>
        <item android:left="2dp" android:top="2dp">
            <shape>
                <corners android:radius="15dp" />
                <gradient
                    android:startColor="#FFC2B9B9"
                    android:endColor="#FFC2B9B9"
                    android:type="linear"/>
            </shape>
        </item>
        <item android:right="2dp" android:bottom="2dp">
            <shape android:shape="rectangle">
                <gradient
                    android:startColor="#FF5770"
                    android:centerColor="#FFD96E"
                    android:endColor="#0396FE"
                    android:type="linear"/>
                <corners android:radius="15dp" />
            </shape>
        </item>
    </layer-list>
</item>
</selector>